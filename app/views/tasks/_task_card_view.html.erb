<%= turbo_frame_tag "tasks_list" do %>
  <div class="row my-3" id="card-view-tasks">
    <% if tasks.any? %>
      <% tasks.each do |task| %>
        <div class="col-sm-12 col-lg-4 my-2" >
          <%= render partial:"task_item", locals: {task: task} %>
        </div>
      <% end %>
      <%= link_to new_task_path, class: "col-sm-12 col-lg-4 my-2", data: {turbo_frame: 'show_content_modal', action: "click->modal-task#showModal"} do %>
        <div class="card text-center bg-success border-0 bg-opacity-50 shadow-hover" style="height: 150px;">
          <div class="card-body d-flex align-items-center justify-content-center">
            <i class="fa-solid fa-plus text-dark" style="font-size: 4rem;"></i>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-danger" role="alert">
        AÃºn no ha creado tareas
      </div>
      <%= link_to new_task_path, class: "col-sm-12 col-lg-4 my-2", data: {turbo_frame: 'show_content_modal', action: "click->modal-task#showModal"} do %>
        <div class="card text-center bg-success border-0 bg-opacity-50 " style="height: 258px;">
          <div class="card-body d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-plus text-dark" style="font-size: 4rem;"></i>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
