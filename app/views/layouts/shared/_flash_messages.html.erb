<% flash.each do |name, msg| %>
  <div class="toast-container position-fixed bottom-0 end-0 p-3 position-static">
    <div class="toast align-items-center show text-bg-<%= name == 'alert' ? "danger" : "success"%> border-0" role="alert" aria-live="assertive" aria-atomic="true" id="<%= "flash_#{name}" %>">
      <div class="d-flex">
        <div class="toast-bodyt">
          <%= msg %>
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% end %>
