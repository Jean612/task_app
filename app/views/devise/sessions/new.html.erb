<div class='container px-5 mt-3'>
  <h1>Iniciar sesión o 
  <span><%= link_to "Registrate", new_registration_path(resource_name), class:"link-success text-decoration-none" %></span></h1>
  
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", floating: true, label: "Correo" %>
    <%= f.password_field :password, autocomplete: "current-password", floating: true, label: "Contraseña" %>
  
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me, label: "Recordarme", switch: true %>
    <% end %>
    <%= f.submit "Iniciar sesión", class:'btn btn-primary d-block' %>
  <% end %>
</div>
